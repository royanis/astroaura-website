name: Automated Blog Generation

on:
  schedule:
    # Run 3 times daily at optimal engagement times (UTC)
    - cron: '0 13 * * *'  # 9:00 AM EST / 6:00 AM PST
    - cron: '0 19 * * *'  # 3:00 PM EST / 12:00 PM PST  
    - cron: '0 0 * * *'   # 8:00 PM EST / 5:00 PM PST
  
  # Allow manual triggering
  workflow_dispatch:
    inputs:
      force_generate:
        description: 'Force generate post even if recent posts exist'
        required: false
        default: 'false'
        type: boolean

permissions:
  contents: write
  
jobs:
  generate-blog-post:
    runs-on: ubuntu-latest
    
    steps:
    - name: Checkout repository
      uses: actions/checkout@v4
      with:
        token: ${{ secrets.GITHUB_TOKEN }}
        fetch-depth: 0
        
    - name: Set up Python
      uses: actions/setup-python@v4
      with:
        python-version: '3.11'
        
    - name: Install dependencies
      run: |
        cd automation
        pip install -r requirements.txt
        
    - name: Generate trending blog post
      env:
        GOOGLE_API_KEY: ${{ secrets.GOOGLE_API_KEY }}
      run: |
        cd automation
        python fully_automated_blog_system.py --test
        
    - name: Commit and push changes
      run: |
        git config --local user.email "bot@astroaura.me"
        git config --local user.name "AstroAura Bot"
        
        # Only commit if there are changes
        if [[ -n $(git status --porcelain) ]]; then
          git add .
          
          # Get the latest post info for commit message
          LATEST_POST=$(python -c "import json; posts = json.load(open('blog/posts_index.json')).get('posts', []); print('{}...'.format(max(posts, key=lambda x: x.get('date', ''))['title'][:60]) if posts else 'New blog post')" 2>/dev/null || echo "New blog post")
          
          # Create commit message
          COMMIT_MSG="ü§ñ Auto-generated trending blog post: $LATEST_POST"
          COMMIT_MSG="$COMMIT_MSG"$'\n\n'"üìä Generated via automated trending topic research"
          COMMIT_MSG="$COMMIT_MSG"$'\n'"‚ú® Astrological insights for current trends"
          COMMIT_MSG="$COMMIT_MSG"$'\n'"üìà SEO optimized with trending keywords"
          COMMIT_MSG="$COMMIT_MSG"$'\n\n'"ü§ñ Generated with AstroAura Blog Automation"
          COMMIT_MSG="$COMMIT_MSG"$'\n\n'"Co-Authored-By: AstroAura-Bot <bot@astroaura.me>"
          
          git commit -m "$COMMIT_MSG"
          
          git push
          
          echo "‚úÖ New blog post generated and deployed"
        else
          echo "‚ÑπÔ∏è No new post needed at this time"
        fi

  # Optional: Notify about new posts
  notify:
    runs-on: ubuntu-latest
    needs: generate-blog-post
    if: success()
    
    steps:
    - name: Send success notification
      run: |
        echo "üåü Automated blog generation completed successfully"
        # Add webhook notifications here if needed